<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
         $(document).ready(function() {
        // Initialize carousel
        $('#heroCarousel').carousel({
            interval: 5000
        });

        // Next / Prev buttons
        $('#nextBtn').click(function() {
            $('#heroCarousel').carousel('next');
        });

        $('#prevBtn').click(function() {
            $('#heroCarousel').carousel('prev');
        });

        // Dots navigation
        $('.dot').click(function() {
            const index = $(this).data('slide-to');
            $('#heroCarousel').carousel(index);
        });

        // Update dots on slide
        $('#heroCarousel').on('slide.bs.carousel', function (e) {
            const index = $(e.relatedTarget).index();
            $('.dot').removeClass('active');
            $('.dot').eq(index).addClass('active');
        });
    });
    $('#prevBtn').click(function() { $('#heroCarousel').carousel('prev'); });
</script>